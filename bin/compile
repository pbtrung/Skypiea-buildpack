#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2
BUILDPACKS_DIR=$(dirname $(dirname $0))

function indent() {
  sed -u 's/^/       /'
}

error() {
  echo " !     $*" >&2
  exit 1
}

cd $BUILD_DIR


FILE_VERSION=5.31
FILE_TARBALL="${BUILDPACKS_DIR}/vendor/file-${FILE_VERSION}.tar.gz"
if [[ ! -f $FILE_TARBALL ]] ; then
  ls ${BUILDPACKS_DIR}/vendor
  error "Could not find the file/libmagic libary"
fi
mkdir -p file
tar -m --directory file -zxf $FILE_TARBALL

cd file/file-${FILE_VERSION}
if [[ -f configure ]] ; then
  echo "-----> configuring ..."
  ./configure --prefix=$HOME/xapian --enable-static --enable-shared=no | indent
fi

echo "-----> compiling with make ..."
make SHARED=0 CC='gcc -static -std=c99' CXX='g++ -static' -j4 | indent
make install
cd ../..


XAPIAN_VERSION=1.4.4
XAPIAN_TARBALL="${BUILDPACKS_DIR}/vendor/xapian-core-${XAPIAN_VERSION}.tar.gz"
if [[ ! -f $XAPIAN_TARBALL ]] ; then
  ls ${BUILDPACKS_DIR}/vendor
  error "Could not find the xapian-core libary"
fi
mkdir -p xapian-core
tar -m --directory xapian-core -zxf $XAPIAN_TARBALL

cd xapian-core/xapian-core-${XAPIAN_VERSION}
if [[ -f configure ]] ; then
  echo "-----> configuring ..."
  ./configure --prefix=$HOME/xapian --enable-static --enable-shared=no | indent
fi

echo "-----> compiling with make ..."
make SHARED=0 CC='gcc -static' CXX='g++ -static' -j4 | indent
make install
cd ../..


OMEGA_VERSION=1.4.4
OMEGA_TARBALL="${BUILDPACKS_DIR}/vendor/xapian-omega-${OMEGA_VERSION}.tar.gz"
if [[ ! -f $OMEGA_TARBALL ]] ; then
  ls ${BUILDPACKS_DIR}/vendor
  error "Could not find the xapian-omega libary"
fi
mkdir -p xapian-omega
tar -m --directory xapian-omega -zxf $OMEGA_TARBALL

cd xapian-omega/xapian-omega-${OMEGA_VERSION}
if [[ -f configure ]] ; then
  echo "-----> configuring ..."
  ./configure --prefix=$HOME/xapian --enable-static --enable-shared=no XAPIAN_CONFIG=$HOME/xapian/bin/xapian-config LIBS='-L/home/vcap/xapian/lib -l:libmagic.a' | indent
fi

echo "-----> compiling with make ..."
make SHARED=0 CC='gcc -static' CXX='g++ -static' -j4 | indent
make install
cp $HOME/xapian/lib/xapian-omega/bin/omega $HOME/app/omega.cgi
strip $HOME/app/omega.cgi
cd ../..


CADDY_TARBALL="${BUILDPACKS_DIR}/vendor/caddy.tar.gz"
mkdir -p caddy
tar -m --directory caddy -zxf $CADDY_TARBALL
cp -r caddy/* $HOME/app

cd ../
rm -rf $BUILD_DIR

echo "ls $HOME"
ls $HOME
echo "ls $HOME/app"
ls $HOME/app
cd $HOME
rm -rf $HOME/xapian